                            <div class="progress-fill" id="progressOverall1" style="width: 0%;">0%</div>
                        </div>
                        <p style="color: #666; margin-top: 10px;">6 items total</p>
                    </div>
                    <div>
                        <h3 style="margin-bottom: 15px; color: #7b1fa2;">Objektif 2: Scale-Up</h3>
                        <div class="progress-bar">
                            <div class="progress-fill" id="progressOverall2" style="width: 0%;">0%</div>
                        </div>
                        <p style="color: #666; margin-top: 10px;">6 items total</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab Switching
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Update Progress Bars
        function updateProgress() {
            // Objektif 1
            const obj1Items = document.querySelectorAll('.checklist-item[data-section="obj1"]');
            const obj1Checked = document.querySelectorAll('.checklist-item[data-section="obj1"] input:checked');
            const obj1Progress = (obj1Checked.length / obj1Items.length) * 100;
            
            document.getElementById('progress1').style.width = obj1Progress + '%';
            document.getElementById('progress1').textContent = Math.round(obj1Progress) + '%';
            document.getElementById('progressOverall1').style.width = obj1Progress + '%';
            document.getElementById('progressOverall1').textContent = Math.round(obj1Progress) + '%';

            // Objektif 2
            const obj2Items = document.querySelectorAll('.checklist-item[data-section="obj2"]');
            const obj2Checked = document.querySelectorAll('.checklist-item[data-section="obj2"] input:checked');
            const obj2Progress = (obj2Checked.length / obj2Items.length) * 100;
            
            document.getElementById('progress2').style.width = obj2Progress + '%';
            document.getElementById('progress2').textContent = Math.round(obj2Progress) + '%';
            document.getElementById('progressOverall2').style.width = obj2Progress + '%';
            document.getElementById('progressOverall2').textContent = Math.round(obj2Progress) + '%';

            // Update completed styling
            document.querySelectorAll('.checklist-item').forEach(item => {
                if (item.querySelector('input').checked) {
                    item.classList.add('completed');
                } else {
                    item.classList.remove('completed');
                }
            });

            // Save state to localStorage
            saveState();
        }

        // Update Funnel Data
        function updateFunnel() {
            const totalLeads = parseInt(document.getElementById('totalLeads').value) || 30;
            const mqlRate = parseInt(document.getElementById('mqlRate').value) || 0;
            const conversionRate = parseInt(document.getElementById('conversionRate').value) || 0;

            // Calculate funnel (assuming 30 days)
            const monthlyLeads = totalLeads * 30;
            const mqlCount = Math.round(monthlyLeads * (mqlRate / 100));
            const prospectCount = Math.round(mqlCount * 0.67); // Assume 67% of MQL become prospects
            const dealCount = Math.round(prospectCount * (conversionRate / 100));

            document.getElementById('funnelLeads').textContent = monthlyLeads;
            document.getElementById('funnelMQL').textContent = mqlCount + ' (' + mqlRate + '%)';
            document.getElementById('funnelProspect').textContent = prospectCount;
            document.getElementById('funnelDeal').textContent = dealCount + ' (' + conversionRate + '%)';

            saveState();
        }

        // Save state to localStorage
        function saveState() {
            const state = {
                totalLeads: document.getElementById('totalLeads').value,
                mqlRate: document.getElementById('mqlRate').value,
                conversionRate: document.getElementById('conversionRate').value,
                benefitRate: document.getElementById('benefitRate').value,
                salesCycle: document.getElementById('salesCycle').value,
                checkboxes: []
            };

            document.querySelectorAll('.checklist-checkbox').forEach((checkbox, index) => {
                state.checkboxes.push(checkbox.checked);
            });

            localStorage.setItem('fluentzDashboard', JSON.stringify(state));
        }

        // Load state from localStorage
        function loadState() {
            const saved = localStorage.getItem('fluentzDashboard');
            if (saved) {
                const state = JSON.parse(saved);
                document.getElementById('totalLeads').value = state.totalLeads || 30;
                document.getElementById('mqlRate').value = state.mqlRate || 0;
                document.getElementById('conversionRate').value = state.conversionRate || 0;
                document.getElementById('benefitRate').value = state.benefitRate || 0;
                document.getElementById('salesCycle').value = state.salesCycle || 0;

                document.querySelectorAll('.checklist-checkbox').forEach((checkbox, index) => {
                    if (state.checkboxes && state.checkboxes[index]) {
                        checkbox.checked = true;
                    }
                });

                updateFunnel();
                updateProgress();
            }
        }

        // Initialize on load
        window.onload = function() {
            loadState();
        };
    </script>
</body>
</html>
